#!/usr/bin/env bash

has_param() {
    local term="$1"
    shift
    for arg; do
        if [[ $arg == "$term" ]]; then
            return 0
        fi
    done
    return 1
}

. ./scripts/flags/declares.sh

variables["--model"]="model"
variables["--mode"]="mode"
variables["--config"]="config"

. ./scripts/flags/arguments.sh

model=${model:-""}
mode=${mode:-"train"}
config=${config:-"default"}

echo "Running $mode mode with $config configuration file"

all=""
env=""

if has_param '--all' "$@"; then
    all="_all"
fi

if has_param '--tl' "$@"; then
    env="transfer_learning/"
elif has_param '--ssl' "$@"; then
    env="ssl/"
fi

if [ "$model" = "" ]; then
    echo "The entered model \"$model\" does not exists"
    exit 1
fi

if [ "$env" = "" ]; then
    env="${model}/"
    config_path="src/$model/config/config_$config.conf"
else
    config_path="src/${env}/config/$model/config_$config.conf"
fi


if [ ! -f $config_path ]; then
    echo "The entered config file \"$config_path\" does not exists"
    exit 1
fi

if [ ! -d src/${env}scripts/$mode ]; then
    echo "The entered execution mode: \"$mode\" does not exists for $model model"
    exit 1
fi

python src/${env}scripts/$mode/run_$mode$all.py --config $config_path
