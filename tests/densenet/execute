#!/usr/bin/env bash

ROOT=$(dirname $0)

has_param() {
    local term="$1"
    shift
    for arg; do
        if [[ $arg == "$term" ]]; then
            return 0
        fi
    done
    return 1
}

. $ROOT/../cases.sh

for dataset in ${!tests_cases[*]}; do
    flags="${tests_cases[$dataset]}"

    echo "Executing test case for $dataset dataset with flags $flags"

    python $ROOT/../../src/densenet/scripts/train/run_train.py \
        --config $ROOT/../../src/densenet/config/config_$dataset.conf \
        $flags
done
